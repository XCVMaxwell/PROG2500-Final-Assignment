<Page
    x:Class="FinalApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinalApp"
    xmlns:models="using:PokemonTcgSdk.Models"
    xmlns:viewmodels="using:FinalApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewmodels:PokemonViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <CollectionViewSource x:Name="PokemonCollection" Source="{x:Bind PMViewModel.Pokemons}"/>
        
        <DataTemplate x:Name="PokemonTemplate" x:DataType="models:PokemonCard">
            <StackPanel Orientation="Horizontal" Margin="6">
                <TextBlock Text="{x:Bind Name}"></TextBlock>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="FilterTextbox" 
                 Text="{x:Bind PMViewModel.Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 PlaceholderText="Search Pokemon here..."
                 FontSize="20" Margin="10" Height="50" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <ScrollViewer Grid.Column="0" Grid.Row="1">
            <ListView VerticalAlignment="Top"
                ItemsSource="{Binding Source={StaticResource PokemonCollection}}"
                ItemTemplate="{Binding Source={StaticResource PokemonTemplate}}"
                SelectedItem="{x:Bind PMViewModel.SelectedPokemon, Mode=TwoWay}"/>
        </ScrollViewer>

        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <TextBlock x:Name="PokemonNumber" Height="80" Text="{x:Bind PMViewModel.PokemonNumber, Mode=OneWay}"></TextBlock>
            <TextBlock x:Name="PokemonName" Height="80" Text="{x:Bind PMViewModel.PokemonName, Mode=OneWay}"></TextBlock>
            <TextBlock x:Name="PokemonHP" Height="80" Text="{x:Bind PMViewModel.PokemonHP, Mode=OneWay}"></TextBlock>
            <TextBlock x:Name="PokemonType" Height="80" Text="{x:Bind PMViewModel.PokemonType, Mode=OneWay}"></TextBlock>
            <Button x:Name="DescriptionButton" Click="DescriptionButton_Click" FontSize="40" Content="More Info" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10"/>
        </StackPanel>

        <!--  Source="{x:Bind PokemonImage} -->
        <Image x:Name="PokemonImage" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Width="625" Height="960"/>
    </Grid>
</Page>
